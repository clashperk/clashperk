{
	"name": "clashperk",
	"version": "2.0.0",
	"author": "SUVAJIT (suvajit.me@gmail.com)",
	"license": "MIT",
	"description": "Clash of Clans Discord Bot",
	"type": "module",
	"main": "./dist/src/index.js",
	"exports": {
		"main": "./dist/src/index.js"
	},
	"workspaces": [
		"locales/*"
	],
	"private": true,
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc",
		"postbuild": "node --es-module-specifier-resolution=node dist/locales/index.js",
		"crowdin": "node --es-module-specifier-resolution=node dist/locales/crowdin.js",
		"start": "npm run build && node --enable-source-maps --es-module-specifier-resolution=node dist/src/index.js",
		"test": "eslint --ext .ts --ignore-path .gitignore .",
		"lint": "eslint --fix --ext .ts --ignore-path .gitignore .",
		"dev": "node -r dotenv/config --enable-source-maps --es-module-specifier-resolution=node dist/src/index.js",
		"deploy": "node --es-module-specifier-resolution=node dist/scripts/index.js",
		"patrons": "node -r dotenv/config --es-module-specifier-resolution=node dist/scripts/Patrons.js",
		"git-module": "git pull --recurse-submodules && git submodule update --remote --recursive --init",
		"pull": "git submodule update --remote"
	},
	"dependencies": {
		"@sentry/integrations": "^7.3.1",
		"@sentry/node": "^7.3.1",
		"bufferutil": "^4.0.6",
		"chalk": "^4.1.2",
		"clashofclans.js": "^1.5.5",
		"common-tags": "^1.8.0",
		"discord-api-types": "^0.30.0",
		"discord.js": "^13.8.0",
		"dotenv": "^10.0.0",
		"erlpack": "github:discord/erlpack",
		"exceljs": "^4.2.1",
		"i18next": "^21.6.13",
		"i18next-fs-backend": "^1.1.4",
		"moment": "^2.29.1",
		"moment-duration-format": "^2.3.2",
		"mongodb": "^4.4.1",
		"ms": "^2.1.3",
		"nanoid": "^4.0.0",
		"node-cron": "^3.0.0",
		"node-fetch": "^2.6.7",
		"readdirp": "^3.6.0",
		"redis": "^4.1.0",
		"reflect-metadata": "^0.1.13",
		"shelljs": "^0.8.4",
		"tsyringe": "^4.6.0",
		"utf-8-validate": "^5.0.9",
		"uuid": "^8.3.2",
		"zlib-sync": "^0.1.7"
	},
	"devDependencies": {
		"@types/common-tags": "^1.8.1",
		"@types/i18next-fs-backend": "^1.1.2",
		"@types/moment-duration-format": "^2.2.3",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.17.9",
		"@types/node-fetch": "^2.5.12",
		"@types/shelljs": "^0.8.9",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"eslint": "^8.3.0",
		"eslint-config-marine": "^9.0.6",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=16.x"
	},
	"eslintConfig": {
		"extends": [
			"marine/prettier/node",
			"plugin:prettier/recommended"
		],
		"plugins": [
			"prettier"
		],
		"ignorePatterns": [
			"dist",
			"node_modules"
		],
		"parser": "@typescript-eslint/parser",
		"rules": {
			"no-process-env": 0,
			"no-inline-comments": 0,
			"no-warning-comments": 0,
			"comma-dangle": [
				"error",
				"never"
			],
			"arrow-parens": [
				"error",
				"always"
			],
			"import/order": [
				"error",
				{
					"pathGroups": [
						{
							"pattern": "~/**",
							"group": "external"
						}
					]
				}
			],
			"@typescript-eslint/naming-convention": 0,
			"@typescript-eslint/no-floating-promises": 0,
			"@typescript-eslint/no-misused-promises": 0,
			"@typescript-eslint/no-unsafe-argument": 0,
			"@typescript-eslint/no-unsafe-return": 0,
			"@typescript-eslint/no-unsafe-member-access": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_"
				}
			]
		}
	},
	"prettier": {
		"semi": true,
		"tabWidth": 4,
		"printWidth": 140,
		"singleQuote": true,
		"quoteProps": "consistent",
		"bracketSpacing": true,
		"trailingComma": "none",
		"overrides": [
			{
				"files": [
					"*.json"
				],
				"options": {
					"tabWidth": 2,
					"printWidth": 120
				}
			},
			{
				"files": [
					"*.md"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			},
			{
				"files": [
					"*.yml"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	}
}
