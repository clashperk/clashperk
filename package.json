{
	"name": "clashperk",
	"version": "3.0.0",
	"author": "SUVAJIT (suvajit.me@gmail.com)",
	"license": "MIT",
	"description": "Clash of Clans Discord Bot",
	"type": "module",
	"main": "./dist/src/index.js",
	"exports": {
		"main": "./dist/src/index.js"
	},
	"private": true,
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc",
		"postbuild": "node -r dotenv/config dist/locales/export.js",
		"crowdin": "node -r dotenv/config dist/locales/crowdin.js",
		"start": "npm run build && node -r dotenv/config --enable-source-maps dist/src/index.js",
		"test": "eslint --ext .ts --ignore-path .gitignore .",
		"lint": "eslint --fix --ext .ts --ignore-path .gitignore .",
		"dev": "node -r dotenv/config --enable-source-maps dist/src/index.js",
		"deploy": "node -r dotenv/config dist/scripts/index.js",
		"patrons": "node -r dotenv/config dist/scripts/Patrons.js",
		"pull": "git submodule init && git submodule update --remote"
	},
	"dependencies": {
		"@sentry/integrations": "^7.3.1",
		"@sentry/node": "^7.3.1",
		"bufferutil": "^4.0.6",
		"chalk": "^4.1.2",
		"clashofclans.js": "^1.5.5",
		"discord-api-types": "^0.37.1",
		"discord.js": "^14.3.0",
		"erlpack": "github:discord/erlpack",
		"exceljs": "^4.2.1",
		"i18next": "^21.6.13",
		"moment": "^2.29.1",
		"moment-duration-format": "^2.3.2",
		"mongodb": "^4.4.1",
		"ms": "^2.1.3",
		"nanoid": "^4.0.0",
		"node-fetch": "^3.2.10",
		"readdirp": "^3.6.0",
		"redis": "^4.1.0",
		"reflect-metadata": "^0.1.13",
		"timeout-signal": "^1.1.0",
		"tsyringe": "^4.6.0",
		"utf-8-validate": "^5.0.9",
		"zlib-sync": "^0.1.7"
	},
	"devDependencies": {
		"@types/moment-duration-format": "^2.2.3",
		"@types/ms": "^0.7.31",
		"@types/node": "^18.6.4",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"dotenv": "^16.0.2",
		"eslint": "^8.3.0",
		"eslint-config-marine": "^9.0.6",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=16.x"
	}
}
