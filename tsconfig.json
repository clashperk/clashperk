{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": true,
		"lib": [
			"ES2020",
			"esnext",
			"esnext.array",
			"esnext.intl",
			"esnext.symbol"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist/",
		"paths": {
			"#scripts/*": [
				"./scripts/*"
			]
		},
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": [
		"src",
		"scripts",
		"root.ts",
		"index.d.ts"
	]
}