{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": true,
		"lib": [
			"esnext",
		],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist/",
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": [
		"src",
		"scripts",
		"locales",
		"locales/**/*.json"
	]
}